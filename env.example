# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/trading_bot

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# =============================================================================
# EXCHANGE CONFIGURATIONS - Multi-Exchange Support
# =============================================================================

# Binance Exchange Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_key_here
BINANCE_SANDBOX=true

# MEXC Exchange Configuration (MEXV)
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET=your_mexc_secret_key_here
MEXC_SANDBOX=true

# MT5 (MetaTrader 5) Configuration
MT5_ENABLED=false
MT5_LOGIN=your_mt5_account_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=MetaQuotes-Demo
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
MT5_TIMEOUT=60

# Additional Exchange Support (Optional)
# Coinbase Exchange
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_SECRET=your_coinbase_secret
COINBASE_PASSPHRASE=your_coinbase_passphrase
COINBASE_SANDBOX=true

# Kraken Exchange
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_SECRET=your_kraken_secret

# Bybit Exchange
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET=your_bybit_secret
BYBIT_SANDBOX=true

# KuCoin Exchange
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_SECRET=your_kucoin_secret
KUCOIN_PASSPHRASE=your_kucoin_passphrase
KUCOIN_SANDBOX=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Risk Management
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
DEFAULT_POSITION_SIZE=100
ENABLE_PAPER_TRADING=true

# Exchange Preferences
DEFAULT_CRYPTO_EXCHANGE=binance
DEFAULT_FOREX_EXCHANGE=mt5
EXCHANGE_SANDBOX=true

# Discord Channel Configuration
SIGNALS_CHANNEL_ID=your_signals_channel_id
ALERTS_CHANNEL_ID=your_alerts_channel_id
ADMIN_CHANNEL_ID=your_admin_channel_id

# Security Settings
API_SECRET_KEY=your_secret_key_for_api
ENCRYPTION_KEY=your_encryption_key

# Feature Flags
ENABLE_BACKTESTING=true
ENABLE_ANALYTICS=true
ENABLE_WEB_DASHBOARD=false
ENABLE_MULTI_EXCHANGE=true

# Performance Settings
MAX_CONCURRENT_ORDERS=5
RATE_LIMIT_REQUESTS=100
CACHE_EXPIRY_SECONDS=300

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Multi-Exchange Settings
AUTO_EXCHANGE_SELECTION=true
PREFERRED_EXCHANGE_ORDER=binance,mexc,coinbase,kraken
FOREX_EXCHANGE_ENABLED=false
CRYPTO_EXCHANGE_ENABLED=true

# Signal Generation Settings
SIGNAL_CONFIDENCE_THRESHOLD=0.7
MULTI_TIMEFRAME_ANALYSIS=true
DUPLICATE_SIGNAL_PREVENTION=true

# Monitoring and Alerts
HEALTH_CHECK_INTERVAL=300
ALERT_ON_CONNECTION_LOSS=true
EXCHANGE_FAILOVER_ENABLED=true 